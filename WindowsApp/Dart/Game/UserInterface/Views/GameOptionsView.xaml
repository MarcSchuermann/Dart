<UserControl x:Class="Dart.GameOptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Dart">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <local:GameSettingsView DataContext="{Binding GameSettings}" Margin="5,5,5,5"/>
        </Grid>

        <local:PlayerlistView Grid.Column="1" DataContext="{Binding PlayerlistViewModel}" Margin="5,5,5,5"/>
    </Grid>
</UserControl>
