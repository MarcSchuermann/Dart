<UserControl x:Class="Schuermann.Dart.App.Game.UserInterface.Views.DartGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Name="PointsUnderMousePlaceholder" Content="{Binding CurrentPointsUnderMouse, Mode=OneWayToSource}" Visibility="Hidden" />

        <Button Grid.Column="0" Command="{Binding DartThrown}">
            <Grid>
                <Image Name="DartBoardImage" Source="pack://application:,,,/Resources/dartboard.png" MouseMove="DartBoardMouseMove" MouseLeave="DartBoardMouseLeave" />
            </Grid>
        </Button>

        <ListView Grid.Column="1" ItemsSource="{Binding Players}" Width="402" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300" />
                    <GridViewColumn Header="Pkt" DisplayMemberBinding="{Binding CurrentScore}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
