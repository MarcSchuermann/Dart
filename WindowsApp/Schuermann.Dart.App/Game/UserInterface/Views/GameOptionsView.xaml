<UserControl x:Class="Schuermann.Dart.App.Game.UserInterface.Views.GameOptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Schuermann.Dart.App.Game.UserInterface.Views"
              xmlns:converter="clr-namespace:Schuermann.Dart.App.Common.UserInterface.Converter">

   <UserControl.Resources>
      <Style TargetType="ListView" BasedOn="{StaticResource {x:Type ListView}}">
         <Setter Property="KeyboardNavigation.TabNavigation" Value="Continue" />
      </Style>
      <Style TargetType="ListViewItem" BasedOn="{StaticResource {x:Type ListViewItem}}">
         <Setter Property="IsTabStop" Value="False" />
      </Style>
      <converter:ListToVisibilityConverter x:Key="listToVisabilityConverter" />
   </UserControl.Resources>

   <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <local:GameSettingsView DataContext="{Binding GameSettings}" Margin="5,5,5,5" />
        </Grid>

      <ItemsControl Grid.Column="1" IsTabStop="False" ItemsSource="{Binding Playerlist}" Visibility="{Binding Playerlist, Converter={StaticResource listToVisabilityConverter}}"  BorderThickness="0" >
         <ItemsControl.ItemTemplate>
            <DataTemplate>
               <StackPanel>
                  <local:PlayerView DataContext="{Binding}" />
               </StackPanel>
            </DataTemplate>
         </ItemsControl.ItemTemplate>
      </ItemsControl>
      
   </Grid>
</UserControl>
