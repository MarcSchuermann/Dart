<UserControl x:Class="Schuermann.Dart.App.Game.UserInterface.Views.PlayerlistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:Schuermann.Dart.App.Common.UserInterface.Converter"
             xmlns:local="clr-namespace:Schuermann.Dart.App.Game.UserInterface.Views">

    <UserControl.Resources>
      <Style TargetType="ListView" BasedOn="{StaticResource {x:Type ListView}}">
         <Setter Property="KeyboardNavigation.TabNavigation" Value="Continue" />
      </Style>
      <Style TargetType="ListViewItem" BasedOn="{StaticResource {x:Type ListViewItem}}">
         <Setter Property="IsTabStop" Value="False" />
      </Style>
      <converter:ListToVisibilityConverter x:Key="listToVisabilityConverter" />
    </UserControl.Resources>


    <Grid>
        <ListView ItemsSource="{Binding Playerlist}" Visibility="{Binding Playerlist, Converter={StaticResource listToVisabilityConverter}}"  BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <local:PlayerView DataContext="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>    
      </ListView>
    </Grid>
</UserControl>


   
